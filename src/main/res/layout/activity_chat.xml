<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/chat_fondo"
    tools:context="com.example.myapplication.app.MainActivity">

    <LinearLayout
        android:id="@+id/barra"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="4dp"
        android:orientation="horizontal"
        android:background="@drawable/sombra">

        <ImageButton
            android:id="@+id/escuchar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_action_microphone"
            android:background="@null"
            android:gravity="center"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:paddingLeft="10sp"
            android:paddingBottom="5sp" />

        <EditText
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5sp"
            android:hint="@string/hint_activity_chat"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/hablar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_action_send"
            android:background="@null"
            android:gravity="center"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:paddingLeft="10sp"
            android:paddingBottom="5sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lista"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_above="@id/barra"
        android:layout_alignParentTop="true"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:listSelector="#00000000" />


</RelativeLayout>
